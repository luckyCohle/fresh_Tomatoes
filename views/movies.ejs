<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link rel="stylesheet" href="/styles/movies.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
     rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
       crossorigin="anonymous">
       
</head>
<body>
    <div class="row">
        <div class="container-fluid p-0 sticky-top">
          <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-sm bg-body-tertiary border-bottom sticky-top" data-bs-theme="dark">
                    <div class="container-fluid">
                        <a class="navbar-brand lobster-regular d-flex align-items-center" href="/">
                            <img id="logo" src="/img/logo.png" class="img-fluid me-2 ms-2 mb-2" style="max-height: 50px;" alt="Logo">
                            Fresh Tomatos
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item nav-elements">
                                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                                </li>
                                <li class="nav-item nav-elements">
                                    <a class="nav-link" href="/movies">Movies</a>
                                </li>
                                <li class="nav-item nav-elements">
                                    <a class="nav-link" href="/add">Add Movie</a>
                                </li>
                                <li class="nav-item dropdown nav-elements">
                                    <a class="nav-link " href="/logout" role="button"  aria-expanded="false">
                                        Logout
                                    </a>
                                </li>
                            </ul>
                            <form method="get" action="/movies" class="d-flex me-5" role="search">
                                <input class="form-control form-control-lg me-3 search" type="search" id="searchBox" name="search" placeholder="Search" aria-label="Search" value="<%= searchTerm %>">
                                <button class="btn btn-outline-success btn-xs" id="search-btn" type="submit">Search</button>
                            </form>
                        </div>
                    </div>
                </nav>
            </div>
          </div>
        </div> 
    </div>   
        <!--main body-->
    
        <div class="container mt-4">
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    An error occurred: <%= error %>
                </div>
            <% } else { %>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                    <% if (typeof movies !== 'undefined' && movies.length === 0) { %>
                        <div class="col-12">
                            <p class="text-center">No movies found.</p>
                        </div>
                    <% } else if (typeof movies !== 'undefined') { %>
                        <% for(const movie of movies){ %>
                            <div class="col">
                                <div class="card movie-card">
                                    <a href="/movies/<%= movie.id %>" class="text-decoration-none">
                                        <img src="<%= movie.image || '/img/default-movie.jpg' %>" alt="<%= movie.title || 'Movie' %>" class="card-img">
                                        <div class="card-img-overlay d-flex flex-column justify-content-end">
                                            <h5 class="card-title"><%= movie.title || 'Untitled' %></h5>
                                            <p class="card-text movie-genre"><%= (movie.genre && movie.genre.join(', ')) || 'No genre' %></p>
                                            <p class="card-text movie-year"><%= movie.releaseDate || 'Unknown release date' %></p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        <% }; %>
                    <% } %>
                </div>
            <% } %>
        </div>
        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous">
    </script>
</body>
</html>

